# EditorConfig 配置文件
# 确保不同编辑器和IDE的代码格式一致性
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.{json,xml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{gradle,gradle.kts}]
indent_size = 4

[*.properties]
indent_size = 4